---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { parseISO, format } from 'date-fns';

export async function getStaticPaths() {
  const allNews = await getCollection('news');
  return allNews.map(article => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();
---
<BaseLayout>
  <!-- Article Header Section -->
  <section class="relative py-16 lg:py-24 section-gradient overflow-hidden">
    <!-- Background decorative elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-empower-coral/5 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 left-1/4 w-80 h-80 bg-empower-lilac/5 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative max-w-4xl mx-auto px-4">
      <!-- Breadcrumb Navigation -->
      <nav class="mb-8 animate-fade-in">
        <ol class="flex items-center gap-2 text-sm text-empower-mid-gray">
          <li><a href="/" class="hover:text-empower-coral transition-colors">Home</a></li>
          <li class="flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
            <a href="/news" class="hover:text-empower-coral transition-colors">News</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-empower-navy font-medium">Article</span>
          </li>
        </ol>
      </nav>

      <!-- Article Meta -->
      <div class="mb-8 animate-slide-up">
        <div class="flex flex-wrap items-center gap-4 text-sm">
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-sm">
            <svg class="w-4 h-4 text-empower-coral" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time class="font-semibold text-empower-navy">{format(parseISO(article.data.date), 'MMMM d, yyyy')}</time>
          </div>
          <div class="flex items-center gap-2 px-4 py-2 bg-white/80 backdrop-blur-sm rounded-full shadow-sm">
            <svg class="w-4 h-4 text-empower-coral" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="font-semibold text-empower-navy">{article.data.author}</span>
          </div>
          {article.data.featured && (
            <span class="bg-gradient-to-r from-empower-coral to-empower-coral/80 text-white px-4 py-2 rounded-full text-xs font-bold uppercase tracking-wide shadow-lg">
              Featured Article
            </span>
          )}
        </div>
      </div>
      
      <!-- Article Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-empower-navy leading-tight mb-8 animate-slide-up" style="animation-delay: 0.1s;">
        {article.data.title}
      </h1>
      
      <!-- Article Tags -->
      {article.data.tags && article.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-3 animate-slide-up" style="animation-delay: 0.2s;">
          {article.data.tags.map(tag => (
            <span class="bg-white/90 backdrop-blur-sm text-empower-navy px-4 py-2 rounded-full text-sm font-semibold shadow-sm hover:bg-white transition-all duration-300" key={tag}>
              #{tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Article Content Section -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      <div class="bg-white rounded-3xl shadow-xl p-8 lg:p-12 animate-slide-up" style="animation-delay: 0.3s;">
        <article class="prose prose-lg prose-slate max-w-none">
          <Content />
        </article>
      </div>
    </div>
  </section>

  <!-- Article Footer & Navigation -->
  <section class="py-16 section-gradient">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center animate-slide-up">
        <!-- Back to News -->
        <div class="mb-8">
          <a 
            href="/news" 
            class="inline-flex items-center gap-3 text-empower-navy hover:text-empower-coral font-semibold transition-all duration-300 group px-6 py-3 bg-white/80 backdrop-blur-sm rounded-xl shadow-sm hover:shadow-md hover:bg-white"
          >
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
            Back to All News
          </a>
        </div>

        <!-- Share Section -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-empower-navy">Stay Connected</h3>
          <p class="text-empower-mid-gray mb-6">
            Don't miss updates about tryouts, events, and club news.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/interest" class="btn-primary">Pre-Register for Updates</a>
            <a href="/contact" class="btn-secondary">Contact Us</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 