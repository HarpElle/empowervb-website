---
import BaseLayout from '../components/layout/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { parseISO, format } from 'date-fns';
const allNews = await getCollection('news');
const today = new Date();
const news = allNews
  .filter(article => new Date(article.data.date) <= today)
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
---
<BaseLayout>
  <!-- Hero Section -->
  <section class="py-20 section-gradient">
    <div class="max-w-4xl mx-auto px-4 text-center animate-fade-in">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-empower-navy">Latest News & Updates</h1>
      <p class="text-lg md:text-xl text-empower-navy/70 max-w-2xl mx-auto">
        Stay up to date with the latest developments, announcements, and exciting news from Empower Volleyball Club.
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-empower-coral to-empower-lilac mx-auto mt-6"></div>
    </div>
  </section>

  <!-- News Content -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4">
      {news.length === 0 ? (
        <!-- Empty State -->
        <div class="text-center py-20 animate-slide-up">
          <div class="w-20 h-20 bg-gradient-to-br from-empower-coral/20 to-empower-lilac/20 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-empower-coral" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-bold text-empower-navy mb-4">
            More News Coming Soon!
          </h2>
          <p class="text-lg text-empower-mid-gray mb-8 max-w-lg mx-auto">
            We're just getting started! Check back soon for exciting updates about tryouts, coaching staff, facility announcements, and more.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/interest" class="btn-primary">
              Pre-Register Your Interest
            </a>
            <a href="/contact" class="btn-secondary">
              Contact Us for Updates
            </a>
          </div>
        </div>
      ) : (
        <!-- News Articles -->
        <div class="space-y-12">
          {news.map((article, index) => (
            <article class={`card p-8 group animate-slide-up`} style={`animation-delay: ${index * 0.1}s;`} key={article.id}>
              <div class="flex flex-col lg:flex-row gap-6">
                <!-- Article Content -->
                <div class="flex-1">
                  <!-- Article Header -->
                  <div class="flex items-start justify-between mb-4">
                    <div class="flex items-center gap-3 text-sm text-empower-mid-gray">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      <time>{format(parseISO(article.data.date), 'MMMM d, yyyy')}</time>
                    </div>
                    {article.data.featured && (
                      <span class="bg-gradient-to-r from-empower-coral to-empower-coral/80 text-white px-3 py-1 rounded-full text-xs font-semibold">
                        Featured
                      </span>
                    )}
                  </div>
                  
                  <!-- Article Title -->
                  <h2 class="text-2xl md:text-3xl font-bold mb-4 text-empower-navy group-hover:text-empower-coral transition-colors">
                    <a href={`/news/${article.slug}/`} class="block">
                      {article.data.title}
                    </a>
                  </h2>
                  
                  <!-- Article Preview -->
                  <p class="text-empower-mid-gray leading-relaxed mb-6">
                    {article.body.split('\n')[0]}
                  </p>
                  
                  <!-- Article Footer -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2 text-sm text-empower-mid-gray">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <span>By {article.data.author}</span>
                    </div>
                    <a 
                      href={`/news/${article.slug}/`} 
                      class="inline-flex items-center gap-2 text-empower-coral hover:text-empower-coral/80 font-semibold transition-colors group"
                    >
                      Read More
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                      </svg>
                    </a>
                  </div>
                </div>
                
                <!-- Article Tags (if any) -->
                {article.data.tags && article.data.tags.length > 0 && (
                  <div class="lg:w-48 flex lg:flex-col gap-2 flex-wrap">
                    <div class="text-sm font-semibold text-empower-navy mb-2 hidden lg:block">Topics:</div>
                    {article.data.tags.map(tag => (
                      <span class="bg-empower-light-gray text-empower-navy px-3 py-1 rounded-full text-xs font-medium" key={tag}>
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Signup Section -->
  <section class="py-16 section-gradient">
    <div class="max-w-3xl mx-auto px-4 text-center animate-slide-up">
      <div class="card p-10">
        <div class="w-16 h-16 bg-gradient-to-br from-empower-coral to-empower-coral/80 rounded-2xl flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        
        <h2 class="text-2xl md:text-3xl font-bold mb-4 text-empower-navy">
          Never Miss an Update
        </h2>
        <p class="text-empower-mid-gray mb-8 leading-relaxed">
          Stay informed about tryout announcements, coaching staff updates, facility news, and all the latest developments from Empower VB.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/interest" class="btn-primary">
            Pre-Register for Updates
          </a>
          <a href="/contact" class="btn-secondary">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout> 