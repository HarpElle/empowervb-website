---
import BaseLayout from '../components/layout/BaseLayout.astro';
import InterestForm from '../components/forms/InterestForm.astro';
---
<BaseLayout>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex flex-col justify-center items-center text-center bg-empower-navy text-white py-20">
    <div class="absolute inset-0 bg-gradient-to-br from-empower-navy to-empower-dark-gray opacity-90"></div>
    <div class="relative z-10">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 drop-shadow-lg">Empower Volleyball Club</h1>
      <p class="text-xl md:text-2xl mb-8 font-semibold">Elevate Your Game, Strengthen Your Spirit</p>
      <a href="#interest" class="btn-primary inline-block">Join Our Interest List</a>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-16 bg-white text-empower-navy">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Our Mission</h2>
      <p class="text-lg mb-4">Empowering female athletes through excellence, teamwork, and character development in a supportive family environment.</p>
      <span class="italic text-empower-lilac">"Therefore encourage one another and build each other up, just as in fact you are doing."<br/> <span class="text-empower-mid-gray">1 Thessalonians 5:11</span></span>
    </div>
  </section>

  <!-- Why Empower VB Section -->
  <section class="py-16 bg-empower-light-gray">
    <div class="max-w-5xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-10">Why Empower VB?</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
          <div class="mb-4 text-empower-coral">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
          </div>
          <h3 class="font-bold text-xl mb-2">Elite Training</h3>
          <p class="text-empower-mid-gray text-center">High-level coaching, skill development, and competitive play for serious athletes.</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
          <div class="mb-4 text-empower-coral">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 20l9-5-9-5-9 5 9 5z"/><path d="M12 12V4"/></svg>
          </div>
          <h3 class="font-bold text-xl mb-2">Family Environment</h3>
          <p class="text-empower-mid-gray text-center">Supportive, inclusive, and positive team culture for players and families.</p>
        </div>
        <div class="bg-white rounded-lg shadow p-6 flex flex-col items-center">
          <div class="mb-4 text-empower-coral">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4l3 3"/><circle cx="12" cy="12" r="10"/></svg>
          </div>
          <h3 class="font-bold text-xl mb-2">Character Development</h3>
          <p class="text-empower-mid-gray text-center">Building leadership, integrity, and confidence on and off the court.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Interest Form Section -->
  <section id="interest" class="py-16 bg-white">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-2">Future U15 Nationals Players</h2>
      <p class="text-center text-empower-mid-gray mb-6">Official tryout announcements coming August 2025</p>
      <InterestForm />
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-12 bg-empower-navy text-white">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-2">Contact Us</h2>
      <p class="mb-4">Email: <a href="mailto:info@empowervb.com" class="underline hover:text-empower-coral">info@empowervb.com</a></p>
      <div class="flex justify-center gap-6 mt-4">
        <a href="#" aria-label="Instagram" class="hover:text-empower-coral">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
        </a>
        <a href="#" aria-label="Facebook" class="hover:text-empower-coral">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
