---
// Base layout for Empower VB site
const title = 'Empower Volleyball Club';
const description = 'Empowering Female Athletes Through Excellence';
const siteUrl = 'https://empowervb.com';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta name="theme-color" content="#FF7F50" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <!-- Responsive Navbar -->
    <nav class="w-full bg-empower-navy text-white px-4 py-3 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class="font-bold text-2xl tracking-wide">Empower VB</span>
      </div>
      <div class="hidden md:flex gap-8 font-semibold">
        <a href="/" class="hover:text-empower-coral">Home</a>
        <a href="/about" class="hover:text-empower-coral">About</a>
        <a href="/teams" class="hover:text-empower-coral">Teams</a>
        <a href="/interest" class="hover:text-empower-coral">Interest</a>
        <a href="/media" class="hover:text-empower-coral">Media</a>
        <a href="/news" class="hover:text-empower-coral">News</a>
        <a href="/contact" class="hover:text-empower-coral">Contact</a>
      </div>
      <!-- Hamburger for mobile -->
      <div class="md:hidden">
        <button id="menu-toggle" aria-label="Open menu" class="focus:outline-none">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="md:hidden hidden bg-empower-navy text-white px-4 py-2">
      <a href="/" class="block py-2 hover:text-empower-coral">Home</a>
      <a href="/about" class="block py-2 hover:text-empower-coral">About</a>
      <a href="/teams" class="block py-2 hover:text-empower-coral">Teams</a>
      <a href="/interest" class="block py-2 hover:text-empower-coral">Interest</a>
      <a href="/media" class="block py-2 hover:text-empower-coral">Media</a>
      <a href="/news" class="block py-2 hover:text-empower-coral">News</a>
      <a href="/contact" class="block py-2 hover:text-empower-coral">Contact</a>
    </div>
    <main class="flex-1 w-full">
      <slot />
    </main>
    <!-- Footer -->
    <footer class="bg-empower-navy text-white py-8 mt-8">
      <div class="max-w-5xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-center md:text-left">
          <div class="font-bold text-lg mb-1">Empowering Female Athletes Through Excellence</div>
          <div class="text-empower-lilac">&copy; {new Date().getFullYear()} Empower Volleyball Club</div>
        </div>
        <div class="flex gap-6 items-center">
          <a href="mailto:info@empowervb.com" class="hover:text-empower-coral">info@empowervb.com</a>
          <a href="#" aria-label="Instagram" class="hover:text-empower-coral">
            <svg class="w-6 h-6 inline" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
          </a>
          <a href="#" aria-label="Facebook" class="hover:text-empower-coral">
            <svg class="w-6 h-6 inline" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          </a>
        </div>
      </div>
    </footer>
    <script>
      // Hamburger menu toggle
      const toggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('mobile-menu');
      if (toggle && menu) {
        toggle.addEventListener('click', () => {
          menu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html> 